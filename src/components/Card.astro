---
import type { IProduct } from '../interface/product';

interface Props {
	product: IProduct;
}
const product = Astro.props.product;
---
<div class="card">
	<div class="card-image-top">
		<img src={product.urlImage[0]} alt={product.name} />
	</div>
</div>
<style>
	.card {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		height: 100%;
		border: 1px solid #ccc;
		border-radius: 5px;
		box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
		overflow: hidden;
	}
	.card-image-top {
		width: 100%;
		height: 300px;
	}
	.card-image-top img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.card-container {
		width: 100%;
		padding: 1rem;
	}
	.card-container h3 {
		margin: 0;
	}
</style>